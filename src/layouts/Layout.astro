---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Vytvořte si žádost o informace podle zákona č. 106/1999 Sb. jednoduše a správně. Průvodce krok za krokem s AI asistencí." />
    <meta name="keywords" content="zákon 106, žádost o informace, svobodný přístup k informacím, 106/1999 Sb, FOIA, Česká republika" />
    <meta name="author" content="Žádost 106" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Vytvořte si žádost o informace podle zákona č. 106/1999 Sb. jednoduše a správně. Průvodce krok za krokem s AI asistencí." />
    <meta property="og:url" content="https://106-five.vercel.app" />
    <meta property="og:locale" content="cs_CZ" />
    <meta property="og:site_name" content="Žádost 106" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Vytvořte si žádost o informace podle zákona č. 106/1999 Sb. jednoduše a správně." />

    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#0d6e6e" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Newsreader:ital,wght@0,400;0,500;0,600;1,400&family=JetBrains+Mono:wght@500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script is:inline>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').catch(() => {});
      }
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
